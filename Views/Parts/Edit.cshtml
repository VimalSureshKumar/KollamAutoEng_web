@model KollamAutoEng_web.Models.Part

@{
    ViewData["Title"] = "Edit Part";
}

<body class="crud-body">
    <div class="view d-flex align-items-center justify-content-center">
        <div class="create-form text-center">
            <h1>Edit Part</h1>
            <hr />
            <div class="edit-form">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="PartId" />
                    <div class="form-group row">
                        <label asp-for="Reference" class="col-form-label col-md-4 text-md-right">Reference</label>
                        <div class="col-md-8">
                            <input asp-for="Reference" class="form-control" />
                            <span asp-validation-for="Reference" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="PartName" class="col-form-label col-md-4 text-md-right">Part Name</label>
                        <div class="col-md-8">
                            <input asp-for="PartName" class="form-control" />
                            <span asp-validation-for="PartName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Cost" class="col-form-label col-md-4 text-md-right">Cost</label>
                        <div class="col-md-8">
                            <input asp-for="Cost" class="form-control" />
                            <span asp-validation-for="Cost" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row text-center">
                        <div class="col-md-6">
                            <input type="submit" value="Save" class="create-button btn btn-primary btn-block" />
                        </div>
                        <div class="col-md-6">
                            <a asp-action="Index" class="back-button btn btn-secondary btn-block">Back to List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
