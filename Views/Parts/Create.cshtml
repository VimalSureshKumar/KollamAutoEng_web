@model KollamAutoEng_web.Models.Part

@{
    ViewData["Title"] = "Create Part";
}

<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body class="crud-body">
    <div class="view d-flex align-items-center justify-content-center">
        <div class="create-form">
            <h1 class="text-center">Create New Part</h1>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="Reference" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="Reference" class="form-control" />
                        <span asp-validation-for="Reference" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="PartName" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="PartName" class="form-control" />
                        <span asp-validation-for="PartName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Cost" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="Cost" class="form-control" />
                        <span asp-validation-for="Cost" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-6 text-center">
                        <input type="submit" value="Create" class="create-button btn-block" />
                    </div>
                    <div class="col-sm-6 text-center">
                        <a asp-action="Index" class="back-button btn-block">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
