@model PaginatedList<KollamAutoEng_web.Models.Fault>

@{
    ViewData["Title"] = "Faults";
}

<body class="crud-body">
    <div class="view">
        <h1 class="text-center my-5">Manage Faults</h1>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <a asp-action="Create" class="btn btn-success btn-lg">+ Create New Fault</a>

            <form asp-controller="Faults" asp-action="Index" class="d-flex align-items-center">
                <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" placeholder="Search Faults" class="form-control me-2" />
                <button type="submit" class="btn btn-primary">Search</button>
                <a href="@Url.Action("Index", "Faults")" class="btn btn-outline-secondary ms-2">Clear</a>
            </form>
        </div>
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model[0].Vehicle)</th>
                        <th><a asp-action="Index" asp-route-sortOrder="@ViewData["CustomerSortParm"]">Customer</a></th>
                        <th>@Html.DisplayNameFor(model => model[0].FaultName)</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Vehicle.Registration)</td>
                            <td>@Html.DisplayFor(modelItem => item.Customer.FirstName) @Html.DisplayFor(modelItem => item.Customer.LastName)</td>
                            <td>@Html.DisplayFor(modelItem => item.FaultName)</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.FaultId" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.FaultId" class="btn btn-info btn-sm">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.FaultId" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)">Previous</a>
                </li>
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@i">@i</a>
                    </li>
                }
                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</body>
