@model KollamAutoEng_web.Models.Fault

@{
    ViewData["Title"] = "Delete Fault";
}

<body class="crud-body">
    <div class="view d-flex align-items-center justify-content-center">
        <div class="create-form">
            <h1 class="text-center">Delete Fault</h1>
            <h3 class="text-center">Are you sure you want to delete this?</h3>
            <hr />
            <div class="details-view">
                <dl class="row">
                    <dt class="col-sm-4 text-right">
                        @Html.DisplayNameFor(model => model.Vehicle)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Vehicle.Registration)
                    </dd>
                    <dt class="col-sm-4 text-right">
                        @Html.DisplayNameFor(model => model.Customer)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Customer.FirstName)
                        @Html.DisplayFor(model => model.Customer.LastName)
                    </dd>
                    <dt class="col-sm-4 text-right">
                        @Html.DisplayNameFor(model => model.FaultName)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.FaultName)
                    </dd>
                </dl>
            </div>
            <form asp-action="Delete" class="form-group row">
                <input type="hidden" asp-for="FaultId" />
                <div class="col-sm-6 text-center">
                    <input type="submit" value="Delete" class="btn delete-button btn-danger btn-block" />
                </div>
                <div class="col-sm-6 text-center">
                    <a asp-action="Index" class="back-button btn-block">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
