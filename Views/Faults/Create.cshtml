@model KollamAutoEng_web.Models.Fault

@{
    ViewData["Title"] = "Create Fault";
}

<body class="crud-body">
    <div class="view d-flex align-items-center justify-content-center">
        <div class="create-form">
            <h1 class="text-center">Create New Fault</h1>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group row">
                    <label asp-for="VehicleId" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <select asp-for="VehicleId" class="form-control" asp-items="ViewBag.VehicleId"></select>
                        <span asp-validation-for="VehicleId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="CustomerId" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                        <span asp-validation-for="CustomerId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="FaultName" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="FaultName" class="form-control" placeholder="Fault description" />
                        <span asp-validation-for="FaultName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-6 text-center">
                        <input type="submit" value="Create" class="create-button btn-block" />
                    </div>
                    <div class="col-sm-6 text-center">
                        <a asp-action="Index" class="back-button btn-block">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
