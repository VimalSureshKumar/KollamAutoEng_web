@model KollamAutoEng_web.Models.Fault

@{
    ViewData["Title"] = "Edit Fault";
}

<body class="crud-body">
    <div class="view d-flex align-items-center justify-content-center">
        <div class="create-form text-center">
            <h1>Edit Fault</h1>
            <hr />
            <div class="edit-form">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="FaultId" />
                    <div class="form-group row">
                        <label asp-for="VehicleId" class="col-form-label col-md-4 text-md-right">Vehicle</label>
                        <div class="col-md-8">
                            <select asp-for="VehicleId" class="form-control" asp-items="ViewBag.VehicleId"></select>
                            <span asp-validation-for="VehicleId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="CustomerId" class="col-form-label col-md-4 text-md-right">Customer</label>
                        <div class="col-md-8">
                            <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                            <span asp-validation-for="CustomerId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="FaultName" class="col-form-label col-md-4 text-md-right">Fault Name</label>
                        <div class="col-md-8">
                            <input asp-for="FaultName" class="form-control" />
                            <span asp-validation-for="FaultName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row text-center">
                        <div class="col-md-6">
                            <input type="submit" value="Save" class="create-button" />
                        </div>
                        <div class="col-md-6">
                            <a asp-action="Index" class="back-button">Back to List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
