@model KollamAutoEng_web.Models.VehicleModel

@{
    ViewData["Title"] = "Details of Vehicle Model";
}

<body class="crud-body">
    <div class="view d-flex align-items-center justify-content-center">
        <div class="create-form">
            <h1 class="text-center">Vehicle Model Details</h1>
            <hr />
            <div class="details-view">
                <dl class="row">
                    <dt class="col-sm-4 text-right">
                        @Html.DisplayNameFor(model => model.ModelName)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.ModelName)
                    </dd>
                    <dt class="col-sm-4 text-right">
                        Vehicle Brand
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.VehicleBrand.BrandName)
                    </dd>
                </dl>
            </div>
            <div class="form-group row">
                <div class="col-sm-6 text-center">
                    <a asp-action="Edit" asp-route-id="@Model?.ModelId" class="detail-button btn-block">Edit</a>
                </div>
                <div class="col-sm-6 text-center">
                    <a asp-action="Index" class="back-button btn-block">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
