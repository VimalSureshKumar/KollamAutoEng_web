@model KollamAutoEng_web.Models.VehicleModel

@{
    ViewData["Title"] = "Edit Vehicle Model";
}

<body class="crud-body">
    <div class="view d-flex align-items-center justify-content-center">
        <div class="create-form text-center">
            <h1>Edit Vehicle Model</h1>
            <hr />
            <div class="edit-form">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ModelId" />
                    <div class="form-group row">
                        <label asp-for="ModelName" class="col-form-label col-md-4 text-md-right">Model Name</label>
                        <div class="col-md-8">
                            <input asp-for="ModelName" class="form-control" />
                            <span asp-validation-for="ModelName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="BrandId" class="col-form-label col-md-4 text-md-right">Brand</label>
                        <div class="col-md-8">
                            <select asp-for="BrandId" class="form-control" asp-items="ViewBag.BrandId"></select>
                            <span asp-validation-for="BrandId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row text-center">
                        <div class="col-md-6">
                            <input type="submit" value="Save" class="create-button btn-block" />
                        </div>
                        <div class="col-md-6">
                            <a asp-action="Index" class="back-button btn-block">Back to List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
