@model KollamAutoEng_web.Models.Payment

@{
    ViewData["Title"] = "Details of Payment";
}

<body class="crud-body">
    <div class="view d-flex align-items-center justify-content-center">
        <div class="create-form">
            <h1 class="text-center">Payment Details</h1>
            <hr />
            <div class="details-view">
                <dl class="row">
                    <dt class="col-sm-4 text-right">
                        @Html.DisplayNameFor(model => model.Amount)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Amount)
                    </dd>
                    <dt class="col-sm-4 text-right">
                        @Html.DisplayNameFor(model => model.PaymentDate)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.PaymentDate)
                    </dd>
                    <dt class="col-sm-4 text-right">
                        @Html.DisplayNameFor(model => model.PaymentMethod)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.PaymentMethod)
                    </dd>
                    <dt class="col-sm-4 text-right">
                        @Html.DisplayNameFor(model => model.Customer)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Customer.FirstName)
                        @Html.DisplayFor(model => model.Customer.LastName)
                    </dd>
                </dl>
            </div>
            <div class="form-group row">
                <div class="col-sm-6 text-center">
                    <a asp-action="Edit" asp-route-id="@Model?.PaymentId" class="detail-button btn-block">Edit</a>
                </div>
                <div class="col-sm-6 text-center">
                    <a asp-action="Index" class="back-button btn-block">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}