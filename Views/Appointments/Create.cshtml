@model KollamAutoEng_web.Models.Appointment

@{
    ViewData["Title"] = "Create";

    var currentDate = DateTime.Now;
    var minDate = currentDate.ToString("yyyy-MM-dd");
    var maxDate = currentDate.AddYears(1).ToString("yyyy-MM-dd");
}

<body class="crud-body">
    <div class="view d-flex align-items-center justify-content-center">
        <div class="create-form">
            <h1 class="text-center">Create New Appointment</h1>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="AppointmentName" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="AppointmentName" class="form-control" placeholder="Engine Repair etc." />
                        <span asp-validation-for="AppointmentName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="AppointmentDate" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="AppointmentDate" class="form-control" type="date" min="@minDate" max="@maxDate" />
                        <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="CustomerId" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                        <span asp-validation-for="CustomerId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="VehicleId" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <select asp-for="VehicleId" class="form-control" asp-items="ViewBag.VehicleId"></select>
                        <span asp-validation-for="VehicleId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="EmployeeId" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ServiceCost" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="ServiceCost" class="form-control" placeholder="10 / 10.00 etc." />
                        <span asp-validation-for="ServiceCost" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-6 text-center">
                        <input type="submit" value="Create" class="create-button btn-block" />
                    </div>
                    <div class="col-sm-6 text-center">
                        <a asp-action="Index" class="back-button btn-block">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}