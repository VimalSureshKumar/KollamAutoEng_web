@model KollamAutoEng_web.Models.Appointment

@{
    ViewData["Title"] = "Details of Appointment";
}

<body class="crud-body">
    <div class="view d-flex align-items-center justify-content-center">
        <div class="create-form">
            <h1 class="text-center">Appointment Details</h1>
            <hr />
            <div class="details-view">
                <dl class="row">
                    <dt class="col-sm-4 text-right">
                        @Html.DisplayNameFor(model => model.AppointmentName)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.AppointmentName)
                    </dd>
                    <dt class="col-sm-4 text-right">
                        @Html.DisplayNameFor(model => model.AppointmentDate)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.AppointmentDate)
                    </dd>
                    <dt class="col-sm-4 text-right">
                        Customer
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Customer.FirstName)
                        @Html.DisplayFor(model => model.Customer.LastName)
                    </dd>
                    <dt class="col-sm-4 text-right">
                        @Html.DisplayNameFor(model => model.Vehicle.Registration)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Vehicle.Registration)
                    </dd>
                    <dt class="col-sm-4 text-right">
                        Employee
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Employee.FirstName)
                        @Html.DisplayFor(model => model.Employee.LastName)
                    </dd>
                    <dt class="col-sm-4 text-right">
                        @Html.DisplayNameFor(model => model.ServiceCost)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.ServiceCost)
                    </dd>
                </dl>
            </div>
            <div class="form-group row">
                <div class="col-sm-6 text-center">
                    <a asp-action="Edit" asp-route-id="@Model?.AppointmentId" class="detail-button">Edit</a>
                </div>
                <div class="col-sm-6 text-center">
                    <a asp-action="Index" class="back-button">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}