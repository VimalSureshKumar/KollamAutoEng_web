@model KollamAutoEng_web.Models.Appointment

@{
    ViewData["Title"] = "Edit";

    var currentDate = DateTime.Now;
    var minDate = currentDate.ToString("yyyy-MM-dd");
    var maxDate = currentDate.AddYears(1).ToString("yyyy-MM-dd");
}

<body class="crud-body">
    <div class="view d-flex align-items-center justify-content-center">
        <div class="create-form">
        <h1>Edit</h1>
        <h4>Appointment</h4>
        <hr />
        <div class="edit-form">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="AppointmentId" />

                <div class="form-group row">
                    <label asp-for="AppointmentName" class="col-form-label col-md-4">Appointment Name</label>
                    <div class="col-md-8">
                        <input asp-for="AppointmentName" class="form-control" />
                        <span asp-validation-for="AppointmentName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="AppointmentDate" class="col-form-label col-md-4">Appointment Date</label>
                    <div class="col-md-8">
                        <input asp-for="AppointmentDate" class="form-control" type="date" min="@minDate" max="@maxDate" />
                        <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="CustomerId" class="col-form-label col-md-4">Customer</label>
                    <div class="col-md-8">
                        <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                        <span asp-validation-for="CustomerId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="VehicleId" class="col-form-label col-md-4">Vehicle</label>
                    <div class="col-md-8">
                        <select asp-for="VehicleId" class="form-control" asp-items="ViewBag.VehicleId"></select>
                        <span asp-validation-for="VehicleId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="EmployeeId" class="col-form-label col-md-4">Employee</label>
                    <div class="col-md-8">
                        <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="ServiceCost" class="col-form-label col-md-4">Service Cost</label>
                    <div class="col-md-8">
                        <input asp-for="ServiceCost" class="form-control" />
                        <span asp-validation-for="ServiceCost" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-6">
                        <input type="submit" value="Save" class="create-button" />
                    </div>
                    <div class="col-md-6">
                        <a asp-action="Index" class="back-button">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}