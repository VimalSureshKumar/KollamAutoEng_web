@model KollamAutoEng_web.Models.Appointment

@{
    ViewData["Title"] = "Edit Appointment";

    var currentDate = DateTime.Now;
    var minDate = currentDate.AddYears(-1).ToString("yyyy-MM-dd");
    var maxDate = currentDate.AddYears(1).ToString("yyyy-MM-dd");
}

<body class="crud-body">
    <div class="view d-flex align-items-center justify-content-center">
        <div class="create-form text-center">
            <h1 class="text-center">Edit Appointment</h1>
            <hr />
            <div class="edit-form">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="AppointmentId" />
                    <div class="form-group row">
                        <label asp-for="AppointmentName" class="col-form-label col-md-4 text-md-right">Appointment Name</label>
                        <div class="col-md-8">
                            <input asp-for="AppointmentName" class="form-control" />
                            <span asp-validation-for="AppointmentName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="AppointmentDate" class="col-form-label col-md-4 text-md-right">Appointment Date</label>
                        <div class="col-md-8">
                            <input asp-for="AppointmentDate" class="form-control" type="date" min="@minDate" max="@maxDate" />
                            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="CustomerId" class="col-form-label col-md-4 text-md-right">Customer</label>
                        <div class="col-md-8">
                            <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                            <span asp-validation-for="CustomerId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="VehicleId" class="col-form-label col-md-4 text-md-right">Vehicle</label>
                        <div class="col-md-8">
                            <select asp-for="VehicleId" class="form-control" asp-items="ViewBag.VehicleId"></select>
                            <span asp-validation-for="VehicleId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="EmployeeId" class="col-form-label col-md-4 text-md-right">Employee</label>
                        <div class="col-md-8">
                            <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                            <span asp-validation-for="EmployeeId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="ServiceCost" class="col-form-label col-md-4 text-md-right">Service Cost</label>
                        <div class="col-md-8">
                            <input asp-for="ServiceCost" class="form-control" />
                            <span asp-validation-for="ServiceCost" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row text-center">
                        <div class="col-md-6">
                            <input type="submit" value="Save" class="create-button" />
                        </div>
                        <div class="col-md-6">
                            <a asp-action="Index" class="back-button">Back to List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}