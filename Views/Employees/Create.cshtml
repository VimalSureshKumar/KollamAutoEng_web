@model KollamAutoEng_web.Models.Employees

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Employees</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Employee_Name" class="control-label"></label>
                <input asp-for="Employee_Name" class="form-control" />
                <span asp-validation-for="Employee_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee_Phone_Number" class="control-label"></label>
                <input asp-for="Employee_Phone_Number" class="form-control" />
                <span asp-validation-for="Employee_Phone_Number" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Employee_Status" /> @Html.DisplayNameFor(model => model.Employee_Status)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Employee_Pay" class="control-label"></label>
                <input asp-for="Employee_Pay" class="form-control" />
                <span asp-validation-for="Employee_Pay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee_Hours" class="control-label"></label>
                <input asp-for="Employee_Hours" class="form-control" />
                <span asp-validation-for="Employee_Hours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
