@model KollamAutoEng_web.Models.Employee

@{
    ViewData["Title"] = "Create";
}

<body class="crud-body">
    <div class="view d-flex align-items-center justify-content-center">
        <div class="create-form">
            <h1 class="text-center">Create New Employee</h1>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="FirstName" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="FirstName" class="form-control" placeholder="John" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="LastName" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="LastName" class="form-control" placeholder="Doe" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="PhoneNumber" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="PhoneNumber" class="form-control" placeholder="+123456789" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Status" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<Status>()"></select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Pay" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="Pay" class="form-control" placeholder="50.00" />
                        <span asp-validation-for="Pay" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Hours" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="Hours" class="form-control" placeholder="40" />
                        <span asp-validation-for="Hours" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-6 text-center">
                        <input type="submit" value="Create" class="create-button btn-block" />
                    </div>
                    <div class="col-sm-6 text-center">
                        <a asp-action="Index" class="back-button btn-block">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}