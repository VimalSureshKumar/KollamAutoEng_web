@{
    ViewData["Title"] = "Contact Us";
}

<body>
    <div class="container py-5">
        <div class="text-center mb-5">
            <img src="~/images/hot-line-contact-us-call-center-search-interface.png" class="img-fluid" alt="Contact Us" style="max-height: 275px; width: auto; margin-top: -65px;">
        </div>
        <div class="row">
            <div class="col-md-6 mb-4">
                <h4>Get in Touch</h4>
                <p>For inquiries, please contact us via the following methods:</p>
                <ul class="list-unstyled">
                    <li><strong>Phone:</strong> 7591910040</li>
                    <li><strong>Telephone:</strong> 0474-2731416</li>
                    <li><strong>Email:</strong> kollamautoengineering@gmail.com</li>
                    <li><strong>Address:</strong> 17/1036 Kadappakkada, Kollam, Kerala-691008</li>
                </ul>

                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d10696.180571221672!2d76.6104082!3d8.9001611!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3b05fd3d88619539%3A0xaa98a2afb5d697b4!2sKollam%20Auto%20Engineering!5e1!3m2!1sen!2snz!4v1728616920554!5m2!1sen!2snz" 
                        width="400"
                        height="300"
                        style="border:0;"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade">
                </iframe>

            </div>
            <div class="col-md-6">
                <h4>Send Us a Message</h4>
                <form id="contactForm" action="https://formspree.io/f/mldeerrz" method="POST">
                    <div class="text-danger" id="validationSummary"></div>

                    <div class="mb-3">
                        <label for="fullName" class="form-label">Full Name</label>
                        <input type="text" id="fullName" name="Full Name" class="form-control" minlength="5" maxlength="35" placeholder="Enter your full name" required />
                        <span class="text-danger" id="fullNameError"></span>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" id="email" name="Email" class="form-control" placeholder="Enter your email" required />
                        <span class="text-danger" id="emailError"></span>
                    </div>

                    <div class="mb-3">
                        <label for="message" class="form-label">Your Message</label>
                        <textarea id="message" name="Message" class="form-control" rows="5" minlength="2" maxlength="35" placeholder="Enter your message" required></textarea>
                        <span class="text-danger" id="messageError"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Send Message</button>
                </form>
            </div>
        </div>
    </div>
    <script src="~/js/site.js"></script>
</body>
